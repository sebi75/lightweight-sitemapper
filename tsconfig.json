{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "es2016",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "./src/sandbox.ts"]
}
